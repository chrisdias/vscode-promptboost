{
	"name": "promptboost",
	"publisher": "chrisdias",
	"displayName": "Prompt Boost",
	"description": "Tools for enhancing prompt interactions.",
	"repository": {
		"type": "git",
		"url": "https://github.com/chrisdias/vscode-promptboost"
	},
	"qna": "https://github.com/chrisdias/vscode-promptboost/issues",
	"author": {
		"name": "Chris Dias"
	},
	"icon": "resources/icon.png",
	"license": "MIT",
	"version": "0.8.0",
	"engines": {
		"vscode": "^1.99.0",
		"node": "^v23.0.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "promptBoost.boost",
				"title": "Boost Prompt",
				"when": "resourceFilename =~ /\\.prompt\\.md$/"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "promptBoost.boost",
					"when": "resourceFilename =~ /\\.prompt\\.md$/",
					"group": "1_modification"
				}
			],
			"editor/title": [
				{
					"command": "promptBoost.boost",
					"when": "resourceFilename =~ /\\.prompt\\.md$/",
					"group": "navigation"
				}
			]
		},
		"languageModelTools": [
			{
				"name": "promptBoost",
				"tags": [
					"prompt",
					"editing",
					"tools"
				],
				"toolReferenceName": "promptBoost",
				"displayName": "Prompt Boost Tools",
				"modelDescription": "Boost the quality of your prompts",
				"canBeReferencedInPrompt": true,
				"inputSchema": {
					"type": "object",
					"properties": {
						"promptText": {
							"type": "string",
							"description": "The prompt text to improve"
						}
					},
					"required": [
						"promptText"
					]
				}
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@vscode/chat-extension-utils": "^0.0.0-alpha.1",
		"@vscode/prompt-tsx": "^0.3.0-alpha.12",
		"nerdbank-gitversioning": "^3.8.38-alpha"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.95.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
